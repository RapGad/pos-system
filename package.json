{
  "name": "pos",
  "private": true,
  "version": "1.0.0",
  "description": "Liquor Store Point of Sale System",
  "author": "RapGad",
  "type": "module",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\" \"npm run dev:preload\" \"npm run dev:start\"",
    "dev:react": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json -w",
    "dev:preload": "tsc -p tsconfig.preload.json -w",
    "dev:start": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:react && npm run build:electron && npm run build:preload && electron-builder",
    "build:win": "npm run build:react && npm run build:electron && npm run build:preload && electron-builder --win",
    "build:react": "tsc -b && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "better-sqlite3": "^12.5.0",
    "electron-squirrel-startup": "^1.0.1",
    "fs-extra": "^11.3.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.11.0",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^32.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}
