{
  "appId": "com.liquorpos.app",
  "productName": "LiquorPOS",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "package.json"
  ],
  "win": {
    "target": "nsis",
    "icon": "public/icon.png"
  },
  "mac": {
    "icon": "public/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true
  }
}
